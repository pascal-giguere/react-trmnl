{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "types": ["node"],
    "moduleResolution": "nodenext",
    "lib": ["esnext"],
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "outDir": "dist",
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": [".yarn"]
}
